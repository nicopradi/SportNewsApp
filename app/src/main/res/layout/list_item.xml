<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/list_item_space"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/list_item_space"
        android:layout_marginRight="@dimen/list_item_space"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/list_item_title"
        android:paddingTop="@dimen/list_item_space"
        android:paddingBottom="@dimen/list_item_space">

        <TextView
            android:id="@+id/list_item_title_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@color/list_item_title"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Title of the article" />

        <TextView
            android:id="@+id/list_item_author_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/list_item_space"
            android:background="@color/list_item_title"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/list_item_author"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="Author: Bob Smith" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_date_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom|center_horizontal"
            android:paddingLeft="@dimen/list_item_space"
            android:paddingRight="@dimen/list_item_space"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="1st January 2020" />

        <TextView
            android:id="@+id/list_item_hour_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="top|center_horizontal"
            android:paddingLeft="@dimen/list_item_space"
            android:paddingRight="@dimen/list_item_space"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="20:50" />

    </LinearLayout>

</LinearLayout>